#! /usr/bin/env python

"""需要每隔几分钟刷新一下服务器使用情况
* * * * * /opt/anaconda3/bin/ylt
"""

from ylt import disk, nodes, ns_state, temps

# ***REMOVED***
LIUXIAONAN = "***REMOVED***"
# ***REMOVED***
YUH = "***REMOVED***"
# ***REMOVED***
WANGYISEN = "***REMOVED***"
# ***REMOVED***
DONGJIAQI = "***REMOVED***"
# ***REMOVED***
ZHAOBAOTONG = "***REMOVED***"

# 监控master温度
to_mail_users_temp = [YUH, ZHAOBAOTONG]
temps.main(to_mail_users_temp)

# 监控master磁盘
to_mail_users_disk = [YUH, WANGYISEN, DONGJIAQI, LIUXIAONAN]
disk.main(to_mail_users_disk)

# 监控节点在线状态
to_mail_users_nodes = [YUH]
nodes.main(to_mail_users_nodes)

# 显示独立服务器状态
ns_state.main(["ns1", "ns2", "ns3", "ns4"])


# 获取每个节点的top信息
nodes.ref_node_top()

#! /usr/bin/env python

"""
查看其他节点 top 信息
"""
import sys, os
from ylt.nodes import TOPS_PATH

if __name__ == "__main__":
    args = sys.argv
    if len(args) <= 1:
        print("请输入：topn 2 以查看node2节点的top信息\ntopn X 可查看nodeX的信息")
    else:
        print(os.popen(f"cat {TOPS_PATH}/topnode{args[1]}").read())

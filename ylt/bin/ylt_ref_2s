#! /usr/bin/env python

"""crontab只能每隔1分钟，这里需要每2s刷新一下
* * * * * source /usr/local/anaconda3/bin/activate gr && ylt_ref_2s
"""

from ylt.nodes import ref_node_top
from ylt.ns_state import ref_ns_state
import threading



for i in range(29):
    # 获取每个节点的top信息
    t1 = threading.Thread(target=ref_node_top)
    t1.start()
    t1.join()

    # ns独立服务器情况
    t2 = threading.Thread(target=ref_ns_state)
    t2.start()
    t2.join()
